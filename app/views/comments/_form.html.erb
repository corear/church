<%= form_for([Post.find(@post), Post.find(@post).comments.build]) do |f|  %>
  <div class="panel panel-default post-panel">
  <div class="panel-body row" style="padding:0">
    <div class="col-xs-10" style="padding:0">
    <%= f.text_area :content, autofocus: true, :class => "noOutline", :style => "width:98%;height:80px;border:none;padding:18px 40px;padding-bottom:0px;resize:none;font-size:2rem", :placeholder => "Drop a comment..." %>
    </div>
     <div class="col-xs-2" style="padding:0;">
  <%= f.submit "POST", :class => "post-btn", :style => "height:90px;font-size:1.45rem;padding-right:5px;width:100%;background-color:#{current_user.hex}" %>
  </div>
  </div>
  </div>

<% end %>