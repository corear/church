

<style>
    body {
background: 
        linear-gradient(
        <%= current_user.hex %>4d,
        <%= current_user.hex %>4d
        ), url("/<%= current_user.bg %>.jpg") no-repeat center center fixed;        
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
    
    @keyframes bouncing-loader {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0.1;
    transform: translateY(-1rem);
  }
}
.bouncing-loader {
  display: flex;
  justify-content: center;
  width:100%;
  height:100%;
  position:fixed;
  background:rgba(0,0,0,0.8);
  z-index:1000;
  visibility:hidden;
  align-items: center;
}
.bouncing-loader > div {
  width: 2rem;
  height: 2rem;
  margin: 3rem 0.2rem;
  background: #fff;
  border-radius: 50%;
  z-index:1001;
  margin-top:5%;
  animation: bouncing-loader 0.6s infinite alternate;
}
.bouncing-loader > div:nth-child(2) {
  animation-delay: 0.2s;
}
.bouncing-loader > div:nth-child(3) {
  animation-delay: 0.4s;
}

.passage-content > div > h1 > .passage-display-bcv{
    color: <%= current_user.hex %> !important;
}

.passage-content > div > p > .chapternum, sup{
    background-color: <%= current_user.hex %> !important;;
}

.widget-scrubber-container{
    margin-right:0 !important;
}

iframe{
    border-radius:10px !important;
}
</style>



<div class="bouncing-loader" id="bouncing">
  <div></div>
  <div></div>
  <div></div>
</div>

<%= render '/layouts/nav_user' %>

<div class="container">
    
    <div class="col-sm-2"></div>
    <div class="col-sm-8" style="margin-top:50px">
        
         <div style="margin-top:20px;">
             <% for @p in @sermons %>
             <iframe name="media" width="100%" height="120" src="https://www.mixcloud.com/widget/iframe/?hide_cover=1&light=1&feed=%2FChristFellowship%2F<%= @p %>%2F" frameborder="0" ></iframe>
        <% end %>
         </div>
    </div>
    <div class="col-sm-2"></div>
    
</div>
<script>
    document.title="Sermons | Christ Fellowship"
</script>